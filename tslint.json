{
    "defaultSeverity": "warn",
    "defaults": {
        "severity": "warning"
    },
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "jsx-no-multiline-js": false,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "jsx-wrap-multiline": false,
        "indent": [
            true,
            "spaces",
            2
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "interface-name": [
            false
        ],
        "max-line-length": [
            true,
            140
        ],
        "no-empty": [
            true,
            "allow-empty-functions"
        ],
        "no-empty-interface": false,
        "no-conditional-assignment": false,
        "max-classes-per-file": false,
        "no-unused-imports": [
            "warn"
        ],
        "jsx-no-lambda": false,
        "jsx-boolean-value": false,
        "noUnusedLocals": false,
        "object-literal-sort-keys": false,
        "no-console": false,
        "no-unused-expression": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "sort-keys": [
            "warn",
            "asc",
            {
                "natural": true
            }
        ],
        "sort-imports": [
            "warn",
            {
                "ignoreCase": false,
                "ignoreMemberSort": false,
                "memberSyntaxSortOrder": [
                    "none",
                    "all",
                    "single",
                    "multiple"
                ]
            }
        ],
        "object-shorthand": [
            "warn",
            "always"
        ]
    },
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    }
}